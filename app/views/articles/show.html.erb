
<div class="container">
  <div class="row">
    <div class="col-sm-9">
      <h3><%= @article.title%></h3>
      <p><strong><%= @article.summary %></strong></p>
      <%= image_tag @article.image.url(:large), :class => "img-responsive" if @article.image? %>  
      <p><%= @article.imagetext if @article.imagetext?%></p>
      <p><%= @article.content.html_safe %></p>
      <p>
        <i class="zmdi zmdi-attachment-alt"></i> <%= link_to @article.document, @article.document.url, :target => 'blank' if @article.document? %> 
      </p>
      <% @article.assets.each do |asset| %>
      <div>
        <p><%= image_tag asset.image.url(:large), :class => "img-responsive" if asset.image? %>  </p>
        <p><%= asset.imagetext %></p>
      </div>
      <% end %>
    </div>
    <div class="col-sm-3">
      <h4 class="primary-font">Flere aktuelt</h4>
      <% @articles.alleaktuelt.each do |art| %>
        <%=  link_to article_path(art) do %>
          <h5><%= art.title %></h5>
        <% end %>
      <% end %>
      <h4 class="primary-font">FÃ¸lg oss</h4>
    </div>
  </div>
</div>