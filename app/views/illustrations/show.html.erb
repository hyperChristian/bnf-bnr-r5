
<div class="container">
  <div class="row">
      <div class="col-md-8">
        <div class="row">
          <h3 class="hidden-md-up">
            <%= @illustrasjon.title%>
          </h3>
          <% @illustrasjon.assets.each do |ill| %>
            <div class="col-xs-6 col-md-3">
              <%= image_tag ill.image.url(:medium), :class => "img-responsive img-illustrasjon" if ill.image? %>  
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-md-4">
        <h3 class="xs-hidden">
          <%= @illustrasjon.title%>
        </h3>
        <%= @illustrasjon.content.html_safe %>
        <div>
          <p>
            <% link_to @illustrasjon.document.url do %>
              <div class="btn btn-md btn-primary">Last ned alle bildene (.zip)</div>
            <% end %>
          </p>
        </div>
      </div>
  </div>
</div>