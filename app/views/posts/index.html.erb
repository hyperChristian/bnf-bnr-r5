
<%#= link_to 'All Posts', posts_path %>
	<%= render 'search', route: posts_path %>
	<% @categories.each do |cat| %>
	    <h2 class="headline text-color">
          <span class="border-color"><%= cat.name %></span>
        </h2>
        <div class="row">
	   	<% for post in cat.posts.where(:publish => true, :showpost => true).order(:id => :asc) %>
	   	
        <div class="col-sm-3">
            <!-- Portfolio Item #3 -->
            <div class="portfolio-item">
            	<%=  link_to post_path(post) do  %>
				<%= image_tag post.image.url(:medium), :class => "img-responsive" if post.image? %>  
                <div class="mask">
                  	<%= post.title %>
                  	<span class="pull-right"><i class="zmdi zmdi-lock-open"></i></span>
                </div>				
				<% end %> 
              	<div class="portfolio-desc">
                	<h3 class="primary-font"><%= post.title %></h3>
                	<p class="text-muted">
					<% if Setting.tag_visible? %>
						<div>
						<% post.tags.each do |tag| %>
							<%= link_to tag.name, posts_path(tag: tag.name), :class => 'btn btn-tag btn-tag' %>
						<% end %>
						</div>
					<% end %>
                	</p>
              	</div>
            </div>
        </div>
   
		<% end %>
	 </div>
	<% end %>

