


<div class="row">
	<div class="col-sm-9">
		<h4 class="primary-font">SÃ¸keresultater: <%=params[:search] %></h4>
		
		<% if @posts.present? %>
		<table class="table table-responsive">
			<tbody>
			<% @posts.each do |post| %>	
			<tr>
			  <td>
			    <%= image_tag post.image.url(:thumb), :class => "img-responsive" if post.image? %>  
			  </td>
			  <td>
			    <div class="item">
			    	<strong>
			      	<%=  link_to post_path(post) do  %>
						<%= post.title %>
					<% end %>
					</strong>
					<% @string = post.content.html_safe %>
			      	<p class="text-muted"><%= truncate(@string, :length => 200) %></p>
			    </div>
			  </td>
			  <td>...</td>
			</tr>
			<% end %>
			</tbody>
		</table>
		<% else %>
			<p>Fant ingen resultater for: <i><%=params[:search] %></i></p>
		<% end %>
	</div>
	<div class="col-sm-3">
		<div class="blog-p-search">
			<%= render 'search', route: posts_path %>
        </div>
	</div>
</div>




